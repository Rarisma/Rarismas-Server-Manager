<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="300"
             x:Class="RSM2.QuickCommands.Terraria">
	<Grid VerticalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300" />
			<ColumnDefinition Width="300" />
		</Grid.ColumnDefinitions>
		<Button Grid.Column="0" Grid.Row="0" Content="Close Server" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Click="StopServer" />
		<Button Grid.Column="2" Grid.Row="0" Content="Save"			HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Click="Save" />
	</Grid>
</UserControl>
