<Page x:Class="RSM.PerGameSettings.MinecraftText"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RSM.PerGameSettings"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="MinecraftText">
    <StackPanel>
        <Border Height="30"/>
        <TextBox Name="ServerFile" TextChanged="Save" Width="500" Height="450" HorizontalAlignment="Center"/>
        <Border Height="30"/>
        <Button Content="Save" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
