<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RSM.UI.Welcome">
	<StackPanel HorizontalAlignment="Center">
		<Border Height="50"/>
		<Label Content="Welcome to RSM!" Classes="Header"/>
		<Border Height="50"/>
		<Label Content="Select an option to get started" Classes="Subheader"/>
		<Border Height="50"/>
		<ComboBox x:Name="ServerList" SelectionChanged="ServerSelectionChanged" MinWidth="200" MaxWidth="600" Margin="0,20" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"/>
	</StackPanel>
</UserControl>