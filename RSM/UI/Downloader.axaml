<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RSM.UI.Downloader">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition MinHeight="200"/>
			<RowDefinition MinHeight="200"/>
			<RowDefinition MinHeight="200"/>
		</Grid.RowDefinitions>
		<Label VerticalAlignment="Center" Grid.Row="0" Padding="10" Content="Setting up ServerName"  Name="ServerVersion" Classes="Header"/>
		<Label VerticalAlignment="Center" Grid.Row="1" Content="TASK NAME" Name="CurrentTask" Classes="Header"/>
		<Label VerticalAlignment="Center" Grid.Row="2" Content="Relax while we set up your server" Classes="Header"/>
	</Grid>
</UserControl>
