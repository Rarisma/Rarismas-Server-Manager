<Page x:Class="RSM.RSMGeneric.UI.Downloader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RSM.RSMGeneric.UI"
      mc:Ignorable="d" 
      d:DesignHeight="790" d:DesignWidth="790"
      Title="Downloader"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <ui:SimpleStackPanel VerticalAlignment="Center">
        <ui:SimpleStackPanel HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10" Text="Setting up ServerName"  Name="ServerVersion" FontSize="25" Style="{StaticResource HeaderTextBlockStyle}" Foreground="#fff" />
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="TASK NAME"  FontSize="25" Name="CurrentTask" Style="{StaticResource HeaderTextBlockStyle}" Foreground="#fff" />
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Sit back and relax while we set up your server"  FontSize="20" Style="{StaticResource HeaderTextBlockStyle}" Foreground="#fff" />
        </ui:SimpleStackPanel>
        <Border Height="200"/>
        <TextBox Name="ConsoleOutput" Width="600" Height="300"/>
    </ui:SimpleStackPanel>

</Page>
