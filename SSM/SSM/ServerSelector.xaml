<UserControl x:Class="SSM.ServerSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SSM"
             mc:Ignorable="d"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             d:DesignHeight="650" d:DesignWidth="600">

    <Grid>
        <ui:SimpleStackPanel>
            <Label Content="Select a server to manage:" FontSize="30" HorizontalAlignment="Center" Padding="20"/>

            <ui:ListView SelectionChanged="ServerSelectionChanged" Name="ListView" HorizontalAlignment="Center" HorizontalContentAlignment="Center" SelectionMode="Single" Foreground="#fff" Background="#000"/>

        </ui:SimpleStackPanel>
    </Grid>

</UserControl>
