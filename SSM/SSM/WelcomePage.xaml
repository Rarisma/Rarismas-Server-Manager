<UserControl x:Class="SSM.WelcomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SSM"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"
             xmlns:ui="http://schemas.modernwpf.com/2019">

    <ui:SimpleStackPanel Margin="12" Spacing="24">
        <TextBlock TextAlignment="Center" Foreground="#ffff"  VerticalAlignment="Center" Text="Welcome to Simple Server Manager!" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
        <Border Height="60"/>
    </ui:SimpleStackPanel>
</UserControl>