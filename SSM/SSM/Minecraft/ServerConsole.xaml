<Page x:Class="SSM.Minecraft.ServerConsole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSM.Minecraft"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="ServerConsole">

    <ui:SimpleStackPanel>
        <Label Content="ServerName, ServerStatus" HorizontalAlignment="Center" Name="ServerStatus" Padding="20" FontSize="30"/>
        <TextBox Name="ServerOutput" Height="600" Width="750" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Close server" HorizontalAlignment="Center" Click="Close"/>
    </ui:SimpleStackPanel>
</Page>
