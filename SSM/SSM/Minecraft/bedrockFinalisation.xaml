<Page x:Class="SSM.Minecraft.bedrockFinalisation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSM.Minecraft"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="600"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="bedrockFinalisation">

    <ui:SimpleStackPanel>
        <Label Padding="5" HorizontalAlignment="Center" FontSize="30" Content="Just one more step" VerticalAlignment="Top"/>
        <Border Height="200"/>
        <Label Content="Enter a name: " HorizontalAlignment="Center"/>
        <Border Height="5"/>
        <TextBox Name="ServerName" SelectionChanged="NameChanged"  HorizontalAlignment="Center" Padding="5" Width="200"/>
    </ui:SimpleStackPanel>
</Page>
