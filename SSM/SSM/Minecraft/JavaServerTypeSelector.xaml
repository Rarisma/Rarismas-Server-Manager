<Page x:Class="SSM.Minecraft.Java.ServerTypeSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SSM.Minecraft.Java"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServerTypeSelect"
      xmlns:ui="http://schemas.modernwpf.com/2019">

    <ui:SimpleStackPanel>

        <Border Height="20"/>
        <TextBlock Foreground="#fff" Text="Select server type" HorizontalAlignment="Center" FontSize="30" />
        <Border Height="50"/>

        <RadioButton Click="Paper" HorizontalAlignment="Center" GroupName="Server"> Paper </RadioButton>
        <TextBlock Foreground="#fff" HorizontalAlignment="Center" TextAlignment="Center" Text="Paper is a lightweight minecraft server&#x0a;It's just as easy to setup as any other server&#x0a;This is the recomended option."/>
        <Border Height="50"/>

        <RadioButton Click="Stock" HorizontalAlignment="Center" GroupName="Server"> Vanilla </RadioButton>
        <TextBlock Foreground="#fff" TextAlignment="Center" HorizontalAlignment="Center" Text="The offical server software.&#x0a;No plugins or mods can be used with this type.&#x0a;You are recomended to pick paper."/>
        <Border Height="50"/>

    </ui:SimpleStackPanel>

</Page>
